{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}



<form action="{{ path("fos_user_security_check") }}" method="post" class="container-fluid login_form auth_form">
    <div class="form-inner row">
        <div class="login_options row m0">
            <div class="options_header row m0">
                <a href="index-2.html"><img src="{{ asset('images/logo.png') }}" alt=""></a>
                <h4>Sign in to Perspective using social profiles of <a href="signup.html">create an account</a></h4>
            </div>
            <div class="row m0 login_with_social_media">
                <a href="#"><img src="{{ asset('images/btn/twitter-login.png') }}" alt=""></a>
                <a href="#"><img src="{{ asset('images/btn/facebook-login.png') }}" alt=""></a>
                <a href="#"><img src="{{ asset('images/btn/gmail-login.png') }}" alt=""></a>
            </div>
        </div>
        {% if error %}
        <div class="alert alert-danger text-center">
            Our system does not recognize your login parameters.
        </div>
        {% endif %}
        <div class="form-header row m0">
            <h4>or Sign in using email address</h4>
        </div>
        <div class="form-body row m0">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>

            <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
            <input type="password" id="password" name="_password" required="required" class="form-control"/>

            <!--<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>-->

            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="form-control"/>
        </div>
    </div>
</form>
{% endblock fos_user_content %}
